<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipeContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/green"
    tools:context="com.weebly.smarthusgruppen.shk_applikasjon.LoginClient">



    <EditText
        android:id="@+id/edittext_password"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="@string/ask_pw"
        android:focusable="true"
        android:gravity="center"
        android:fontFamily="sans-serif"
        android:textColorHighlight="#ff7eff15"
        android:layout_below="@+id/edittext_username"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <EditText
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/edittext_username"
        android:hint="@string/ask_username"
        android:focusable="true"
        android:textColorHighlight="#ff7eff15"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true" />



    <Button
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="Login"
        android:text="@string/Login"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="@color/white"
        android:layout_below="@+id/change_pw"
        android:layout_alignLeft="@+id/saveLoginCheckBox"
        android:layout_alignStart="@+id/saveLoginCheckBox" />

    <CheckBox
        android:id="@+id/saveLoginCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/remember"
        android:textColor="#060606"
        android:gravity="center"
        android:layout_below="@+id/edittext_password"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:checked="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ch_pw"
        android:id="@+id/change_pw"
        android:clickable="true"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textColor="#13f03f"
        android:layout_below="@+id/saveLoginCheckBox"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Glemt passord?"
        android:textColor="#13f03f"
        android:gravity="center"
        android:id="@+id/forgot_pw"
        android:clickable="true"
        android:layout_marginTop="6dp"
        android:layout_below="@+id/change_pw"
        android:layout_centerHorizontal="true"
        android:textSize="15dp" />

</RelativeLayout>
    </android.support.v4.widget.SwipeRefreshLayout>
