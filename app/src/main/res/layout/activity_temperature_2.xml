<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.weebly.smarthusgruppen.shk_applikasjon.Leilighet.Temperature_2">

        <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/GridLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:rowCount="14"
            android:orientation="vertical"
            tools:context=".GridXMLActivity"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">



            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/home_button"
                android:src="@mipmap/home_button"
                android:layout_gravity="center_horizontal"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_columnSpan="2"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/bathroom"
                android:id="@+id/textView3"
                android:textColor="#090909"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_columnSpan="2"/>


            <TextView
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/current1_tv"
                android:textColor="#090909"
                android:layout_gravity="center_horizontal"
                android:layout_row="2"
                android:layout_column="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/curr_temp_tv"
                android:text="@string/current_temp"
                android:textColor="#090909"
                android:layout_gravity="center"
                android:layout_row="1"
                android:layout_column="0"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/static_temp_tv"
                android:text="@string/static_temp"
                android:textColor="#090909"
                android:layout_gravity="center"
                android:layout_row="1"
                android:layout_column="3"
                android:textStyle="bold" />

            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/adjust_up"
                android:src="@android:drawable/arrow_up_float"
                android:contentDescription="up"
                android:layout_gravity="center_horizontal"
                android:layout_row="2"
                android:layout_column="1" />

            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/adjust_down"
                android:src="@android:drawable/arrow_down_float"
                android:contentDescription="down"
                android:layout_gravity="center_horizontal"
                android:layout_row="2"
                android:layout_column="2" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/static1_tv"
                android:textColor="#090909"
                android:editable="true"
                android:layout_gravity="center_horizontal"
                android:layout_row="2"
                android:layout_column="3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/kitchen"
                android:textStyle="bold"
                android:id="@+id/kitchen_tv"
                android:layout_columnSpan="2"
                android:textColor="#090909"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_row="3"
                android:layout_column="1" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/current2_tv"
                android:textColor="#090909"
                android:layout_row="4"
                android:layout_column="0" />

            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/adjust_up1"
                android:src="@android:drawable/arrow_up_float"
                android:layout_row="4"
                android:layout_column="1" />


            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/adjust_down1"
                android:checked="false"
                android:src="@android:drawable/arrow_down_float"
                android:layout_row="4"
                android:layout_column="2" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/static2_tv"
                android:textColor="#090909"
                android:layout_marginLeft="10dp"
                android:layout_row="4"
                android:layout_column="3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/laundry_room"
                android:textStyle="bold"
                android:id="@+id/living_room_tv"
                android:layout_gravity="center"
                android:layout_columnSpan="2"
                android:textColor="#090909"
                android:layout_marginTop="20dp"
                android:layout_row="5"
                android:layout_column="1" />


            <TextView
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/current3_tv"
                android:textColor="#090909"
                android:layout_row="6"
                android:layout_column="0" />

            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/adjust_up2"
                android:src="@android:drawable/arrow_up_float"
                android:layout_row="6"
                android:layout_column="1" />

            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/adjust_down2"
                android:checked="false"
                android:src="@android:drawable/arrow_down_float"
                android:layout_row="6"
                android:layout_column="2" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/static3_tv"
                android:textColor="#090909"
                android:layout_marginLeft="10dp"
                android:layout_row="6"
                android:layout_column="3" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/static4_tv"
                android:textColor="#090909"
                android:layout_marginLeft="10dp"
                android:layout_row="8"
                android:layout_column="3" />


            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/adjust_up4"
                android:src="@android:drawable/arrow_up_float"
                android:layout_row="10"
                android:layout_column="1" />

            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/adjust_up3"
                android:src="@android:drawable/arrow_up_float"
                android:layout_row="8"
                android:layout_column="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/bedroom_1"
                android:textStyle="bold"
                android:id="@+id/bed1_tv"
                android:layout_columnSpan="2"
                android:layout_gravity="center"
                android:textColor="#090909"
                android:layout_marginTop="20dp"
                android:layout_row="7"
                android:layout_column="1" />

            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/adjust_down4"
                android:checked="false"
                android:src="@android:drawable/arrow_down_float"
                android:layout_row="10"
                android:layout_column="2" />

            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/adjust_down3"
                android:checked="false"
                android:src="@android:drawable/arrow_down_float"
                android:layout_row="8"
                android:layout_column="2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/bedroom_2"
                android:textStyle="bold"
                android:id="@+id/bed2_tv"
                android:layout_gravity="center"
                android:layout_columnSpan="2"
                android:textColor="#090909"
                android:layout_marginTop="20dp"
                android:layout_row="9"
                android:layout_column="1" />


            <TextView
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/current4_tv"
                android:textColor="#090909"
                android:layout_row="8"
                android:layout_column="0" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/static5_tv"
                android:textColor="#090909"
                android:layout_marginLeft="10dp"
                android:layout_row="10"
                android:layout_column="3" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/current5_tv"
                android:textColor="#090909"
                android:layout_row="10"
                android:layout_column="0" />



        </GridLayout>

    </RelativeLayout>
</ScrollView>