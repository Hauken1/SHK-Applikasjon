<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/climate_id1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.weebly.smarthusgruppen.shk_applikasjon.Toppleilighet.Climate">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/home_button"
        android:src="@mipmap/home_button"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/klima_temp"
        android:id="@+id/heating_view_button"
        android:layout_marginTop="95dp"
        android:layout_below="@+id/home_button"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ventilation_view_button"
        android:background="@mipmap/klima_ventilasjon"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/heating_view_button"
        android:layout_alignLeft="@+id/heating_view_button"
        android:layout_alignStart="@+id/heating_view_button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Modus:"
        android:id="@+id/mode_view"
        android:layout_below="@+id/home_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_column="1"
        android:layout_row="0"
        android:layout_columnSpan="2"
        android:layout_gravity="center"/>


</RelativeLayout>
