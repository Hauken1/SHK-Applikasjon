<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.weebly.smarthusgruppen.shk_applikasjon.Toppleilighet.LightingLivingRoom">


        <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/GridLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:rowCount="16"
            android:orientation="vertical"
            tools:context=".GridXMLActivity"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/home_button"
                android:src="@mipmap/home_button"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_gravity="center"
                />

            <Button
                android:layout_height="73dp"
                android:layout_width="80dp"
                android:id="@+id/mode_button"
                android:text="@string/choose_mode"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_gravity="center"
                />

            <!-- stue lys vindu -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/lr_win"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:id="@+id/textView3"
                android:layout_row="3"
                android:layout_columnSpan="2"
                android:layout_column="1"
                android:textColor="#090909"
                />



            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOff="Av"
                android:textOn="Av"
                android:id="@+id/toggle_0"
                android:checked="true"
                android:layout_row="4"
                android:layout_column="0" />

            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOff="Min"
                android:textOn="Min"
                android:id="@+id/toggle_30"
                android:checked="false"
                android:layout_column="1"
                android:layout_row="4"
                />

            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOff="Med"
                android:textOn="Med"
                android:id="@+id/toggle_70"
                android:checked="false"
                android:layout_row="4"
                android:layout_column="2"
                />

            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOff="Max"
                android:textOn="Max"
                android:id="@+id/toggle_100"
                android:checked="false"
                android:layout_row="4"
                android:layout_column="3"
                />

            <!-- stue lys tak -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/lr_l1"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:id="@+id/textView4"
                android:layout_row="5"
                android:layout_columnSpan="2"
                android:layout_column="1"
                android:textColor="#090909"
                />



            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOff="Av"
                android:textOn="Av"
                android:id="@+id/toggle_01"
                android:checked="true"
                android:layout_row="6"
                android:layout_column="0" />

            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOff="Min"
                android:textOn="Min"
                android:id="@+id/toggle_301"
                android:checked="false"
                android:layout_column="1"
                android:layout_row="6"
                />

            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOff="Med"
                android:textOn="Med"
                android:id="@+id/toggle_701"
                android:checked="false"
                android:layout_row="6"
                android:layout_column="2"
                />

            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOff="Max"
                android:textOn="Max"
                android:id="@+id/toggle_1001"
                android:checked="false"
                android:layout_row="6"
                android:layout_column="3"
                />

            <!-- lys vegg -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/lr_wl"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:id="@+id/textView5"
                android:layout_row="13"
                android:layout_columnSpan="2"
                android:layout_column="1"
                android:textColor="#090909"
                />



            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOff="Av"
                android:textOn="Av"
                android:id="@+id/toggle_02"
                android:checked="true"
                android:layout_row="14"
                android:layout_column="0" />

            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOff="Min"
                android:textOn="Min"
                android:id="@+id/toggle_302"
                android:checked="false"
                android:layout_column="1"
                android:layout_row="14"
                />

            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOff="Med"
                android:textOn="Med"
                android:id="@+id/toggle_702"
                android:checked="false"
                android:layout_row="14"
                android:layout_column="2"
                />

            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOff="Max"
                android:textOn="Max"
                android:id="@+id/toggle_1002"
                android:checked="false"
                android:layout_row="14"
                android:layout_column="3"
                />



            <!-- stue - alt lys -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/lr_all"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:id="@+id/textView8"
                android:layout_row="1"
                android:layout_columnSpan="2"
                android:layout_column="1"
                android:textColor="#090909"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Modus:"
                android:id="@+id/mode_view"
                android:layout_below="@+id/home_button"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="100dp"
                android:layout_column="1"
                android:layout_row="0"
                android:layout_columnSpan="2"
                android:layout_gravity="center"/>





            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOff="Av"
                android:textOn="Av"
                android:id="@+id/toggle_06"
                android:checked="true"
                android:layout_row="2"
                android:layout_column="0" />

            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOff="Min"
                android:textOn="Min"
                android:id="@+id/toggle_306"
                android:checked="false"
                android:layout_column="1"
                android:layout_row="2"
                />

            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOff="Med"
                android:textOn="Med"
                android:id="@+id/toggle_706"
                android:checked="false"
                android:layout_row="2"
                android:layout_column="2"
                />

            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOff="Max"
                android:textOn="Max"
                android:id="@+id/toggle_1006"
                android:checked="false"
                android:layout_row="2"
                android:layout_column="3"
                />

        </GridLayout>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/settings_light"
            android:layout_below="@+id/GridLayout1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@mipmap/ny_settingslys" />


    </RelativeLayout>
</ScrollView>